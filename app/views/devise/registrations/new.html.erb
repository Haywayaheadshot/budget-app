<section class="sign-up-section">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <nav class="new-user-nav font">
    <%= link_to unauthenticated_root_path do %>
      <%= image_tag asset_path('back-arrow.png'), style: "width: 20px" %>
    <% end %>
    <h1>REGISTER</h1>
    <div class="actions">
    <%= f.submit "Next", class: "next-btn font" %>
    </div>
  </nav>
    <%= render "devise/shared/error_messages", resource: resource %>

    <ul>
      <li class="user_reg_form_ul_li">
        <div class="field">
      <%= f.file_field :photo %>
      <%= f.label :Upload_A_Photo %>
      </div>
    </li>
    <li class="user_reg_form_ul_li">
      <div class="field">
        <%= f.label :name, class: "login-field-label font" %>
      <%= f.text_field :name, autocomplete: "name", placeholder: 'Full name', class: "user_reg_form_ul_li_input" %>
    </div>
    </li>
    <li class="user_reg_form_ul_li">
      <div class="field">
        <%= f.label :email, class: "login-field-label font" %>
      <%= f.email_field :email, placeholder: 'Email', class: "user_reg_form_ul_li_input" %>
    </div>
    </li>
    <li class="user_reg_form_ul_li">
      <div class="field">
        <%= f.label :password, class: "login-field-label font" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "user_reg_form_ul_li_input" %>
      </div>
  </li>
  <li class="user_reg_form_ul_li">
    <div class="field">
      <%= f.label :password_confirmation, class: "login-field-label font" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user_reg_form_ul_li_input" %>
    </div>
  </li>
    </ul>
  <% end %>
  <section>
    <h1 class="already-a-user">Already A User?</h1>
    <%= render "devise/shared/links" %>
  </section>