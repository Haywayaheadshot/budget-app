<section class="login-page-container">
  <div class="login-back-div">
  <%= link_to unauthenticated_root_path do %>
  <%= image_tag asset_path('back-arrow.png'), style: "width: 20px" %>
  <% end %>
  </div>
  <h2 class="login-header font">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<ul class="login-ul">
  <li>
  <div class="field">
    <%= f.label :email, class: "login-field-label font" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-field-input" %>
  </div>
  </li>
  <li>
  <div class="field">
    <%= f.label :password, class: "login-field-label font" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "login-field-input" %>
  </div>
  </li>
  <li>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  </li>
  <li>
  <div class="actions">
    <%= f.submit "Log in", class: "log-in-submit-btn" %>
  </div>
  </li>
 </ul>
<% end %>
<%= render "devise/shared/links" %>
</section>
