<section class="new-group-form">
<%= form_with(model: @entity, url: group_entities_path) do |form| %>
<ul class="group-form-ul">
  <li class="group-form-ul-li">
    <%= form.label :name, class: "login-field-label font" %>
    <%= form.text_field :name, placeholder: 'e.g Dinner', value: '', class: "group-form-input" %>
  </li>
  <li class="group-form-ul-li">
    <%= form.label :amount, class: "login-field-label font" %>
    <%= form.number_field :amount, placeholder: 'e.g 10', in: 1.0..100.0, class: "group-form-input" %>
  </li>
  <li class="group-form-ul-li groups-checkbox">
    <% @groups.each do |group| %>
    <%= form.check_box :group_id, { multiple: true }, group.id, nil %>
      <%= form.label :group_id, group.name %><br>
    <% end %>
  </li>
  <li>
  <div>
    <%= form.submit "Save", class: "log-in-submit-btn" %>
  </div>
  </li>
</ul>
<% end %>
</section>
